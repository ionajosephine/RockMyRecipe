<h1 class="text-center text-emerald-900 font-semibold text-2xl"> Please log in </h1>
  <div class="pb-5"></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"text-emerald-900"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full rounded-lg border-emerald-800 focus:border-emerald-600 caret-emerald-600 ring-0 focus:ring-emerald-500 text-m font-semibold" %>
  </div>

  <div class="pb-5"></div>

  <div class="field">
    <%= f.label :password, class:"text-emerald-900"%><br />
    <%= f.password_field :password, autocomplete: "password", class: "w-full rounded-lg border-emerald-800 focus:border-emerald-600 caret-emerald-600 ring-0 focus:ring-emerald-500 text-m font-semibold" %>
  </div>
  <div class="pb-5"></div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="pb-5"></div>

  <div class="actions">
    <%= f.submit "Log in", class:"width-64 text-m text-white items-center px-3.5 py-2.5 rounded-full bg-emerald-700 hover:bg-emerald-600" %>
  </div>
<% end %>

