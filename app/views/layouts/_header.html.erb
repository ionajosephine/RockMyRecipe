<header>
  <nav>
    <ul>
    <li class="text-black hover:text-cyan-500"><%= link_to 'See all the recipes!', recipes_path %></li>
      <% if contributor_signed_in? %>
        <li>Logged in as <strong><%= current_contributor.profile_name %></strong>.<li>
        <li class="text-black hover:text-cyan-500"><%= link_to 'New Recipe', new_recipe_path %></li>
        <li class="text-black hover:text-cyan-500"><%= link_to 'Edit profile', edit_contributor_registration_path %></li>
        <li><%= button_to "Sign Out", destroy_contributor_session_path, method: :delete %></li>
      <% else %>
        <li class="text-black hover:text-cyan-500">
          <%= link_to "Sign In", new_contributor_session_path %>
        </li>
        <li class="text-black hover:text-cyan-500">
          <%= link_to "Sign Up", new_contributor_registration_path %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>