<%= form_with model: @recipe do |form| %>
  <div>
    <%= form.label :title, class:"text-emerald-900" %>
  </div>
  <div>
    <%= form.text_field :title, autofocus: true, placeholder: :title, class:"w-full rounded-lg border-emerald-800 focus:border-emerald-600 caret-emerald-600 ring-0 focus:ring-emerald-500 text-m font-semibold" %>
  </div>
  <div class="pb-5"></div>
  <div>
    <%= form.label :description, class:"text-emerald-900" %><i>(Why will we love this recipe?)</i>
  </div>
  <div>
    <%= form.text_field :description, placeholder: "You will love this recipe because ...", class:"w-full rounded-lg border-emerald-800 focus:border-emerald-600 caret-emerald-600 ring-0 focus:ring-emerald-500 text-m font-semibold" %>
  </div>
  <div>
    <% recipe.errors.full_messages_for(:title).each do |message| %>
      <div class="italic font-mono text-yellow-300 font-light text-sm"><%= message %></div>
    <% end %>
  </div>
  <div class="pb-5"></div>
  <div>
    <%= form.submit class:"btn-primary" %>
  </div>
<% end %>


